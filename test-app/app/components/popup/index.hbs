<a href="javascript:void(0)" class="popup__trigger" {{toggle-class (concat 'outside:#' this.popupId) 'is-opened' mode='add'}}>{{ @label }}</a>

<div class="popup" id={{ this.popupId }}>
    <div class="popup__window">
        <div class="popup__header">
            <h2 class="popup__title">{{ @header }}</h2>
            <a href="javascript:void(0)" class="popup__close" {{toggle-class '.popup' 'is-opened' mode='remove'}}>&times;</a>
        </div>
        <div class="popup__content">
            <p>{{ @content }}</p>
        </div>
    </div>
</div>
